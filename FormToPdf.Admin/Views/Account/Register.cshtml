@model RegisterFormModel

@{
    ViewData["Title"] = "Register";
}

<section id="register-form">
    <div class="row">
        <div class="col-6 align-self-center">
            <form asp-action="HandleRegister" asp-controller="Account">
                <div class="form-group">
                    <label asp-for="Email">Email address</label>
                    <input asp-for="Email" type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" }, "small")
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Password">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" }, "small")
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
